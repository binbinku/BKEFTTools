<UserControl x:Class="BKEFTTools.ItemDBCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BKEFTTools"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1280">
    <StackPanel Orientation="Horizontal">
        <!-- Left Panel -->
        <StackPanel Orientation="Vertical" Width="400">
            <ScrollViewer Height="730">
                <StackPanel Name="ItemList" Orientation="Vertical">
                    <Button Height="40" FontSize="22"> Item1 </Button>
                    <Button Height="40" FontSize="22"> Item1 </Button>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>

        
        <!-- Right Panel -->
        <StackPanel Orientation="Vertical" Width="880">
            <Border Height="30" VerticalAlignment="Center">
                <TextBlock FontSize="25" TextAlignment="Center" Height="40">ItemInfo</TextBlock>
            </Border>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> ItemName </TextBlock>
                <TextBox Name="ItemName" FontSize="16" Margin="5" Width="670"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> ItemType </TextBlock>
                <TextBox Name="ItemType" FontSize="16" Margin="5" Width="670"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> Prop_Name </TextBlock>
                <TextBox Name="ItemProp_Name" FontSize="16" Margin="5" Width="670"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> Prop_ShortName </TextBlock>
                <TextBox Name="ItemProp_ShortName" FontSize="16" Margin="5" Width="670"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> Prop_Description </TextBlock>
                <TextBox Name="ItemProp_Description" FontSize="16" Margin="5" Width="670"></TextBox>
            </StackPanel>            
            
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> Prop_Prefab </TextBlock>
                <TextBox Name="ItemProp_Prefab" FontSize="16" Margin="5" Width="670"></TextBox>
            </StackPanel>
            
        </StackPanel>

    </StackPanel>
</UserControl>
