<UserControl x:Class="BKEFTTools.PresetInfoItemCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BKEFTTools"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="860">

    <Border BorderThickness="2" BorderBrush="#2e2e2e">
        <StackPanel Orientation="Vertical" Margin="0,0,0,0">
        
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> ItemName </TextBlock>
                <TextBox Name="Preset_Item_Name" FontSize="16" Margin="5" Width="670">itemName</TextBox>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> TPL </TextBlock>
                <TextBox Name="Preset_Item_TPL" FontSize="16" Margin="5" Width="670">1234567890</TextBox>
            </StackPanel>
                
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" Margin="5" Width="130"> SoltID </TextBlock>
                <TextBox Name="Preset_Item_SoltID" FontSize="16" Margin="5" Width="670">slot_some</TextBox>
            </StackPanel>
        
        </StackPanel>
    </Border>
</UserControl>
